[mr_smith_shop]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Hi, I'm Mister Smith (or Smittie, if you want). I'm the smith here.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 1;
		screen_text = "Do you know the history of Lord Hovart?
He was Lord of Ehland back in the old days, and reigned brutally until our grandparents revolted and overthrew him. He was hanged on the little hill southeast from here, and then buried there...
The Old Man was alive back then.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		choice = shop;
		screen_text = "I can sell you what I have here. For the fancier stuff you have to go to my wife.";
	  f scroll_rate = 20.000000;
	}
}
[mrs_smith_shop]
{
	[text*]
	{
		choice = shop;
		screen_text = "Did my old dad tell you about old Lord Hovart? Oh dear.
And even if it's true - I got a business to run here! Quality has its price. Have a look!
...My hubby might have things more suitable for you tho...";
	  f scroll_rate = 20.000000;
	}
}
[quest_complete]
{
	[text*]
	{
		screen_text = "Thank you so much for making Ehland safe again!
Finally I can sleep in peace again.";
	  f scroll_rate = 20.000000;
	}
}
[quest_activate]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Welcome to Ehland, dear traveller.
It's small but it's ours - and we wouldn't want to live anywhere else.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 1;
		screen_text = "The people here might be a bit funny but they're all good folks.
If you want to buy something, have a look at the armor & weaponry store of my daughter and her hubby out to the west of Eh village. Trisha our village hag is also out there somewhere today.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 2;
		screen_text = "But don't go out too far - it's not safe! The dead are walking out there... I fear the old Lord Hovart himself has risen! Stay away from his grave hill!";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 3;
		screen_text = "Unfortunately my daughter does not see the need to confront him, or even just to lower prices for adventurous travellers as you...
The rest of the village isn't very useful either, good folks as they are.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 4;
		screen_text = "If you want to help me but don't have cash, I know there must be a lot of money stored in the Old Tunnel...
You could go there through Ehwood forest, just go west from here.
Should be doable for a strong adventurer like you are. I'd recommend take a good bow with you though.";
	  f scroll_rate = 20.000000;
	}
	[text*]
	{
		activate_quest* = hovart,0;
	  b quest_dialogue = true;
		screen_text = "If you want to help an old man sleep in peace again... I would be very happy if you could bring old Hovart back to the dead where he belongs.";
	  f scroll_rate = 20.000000;
	}
}
